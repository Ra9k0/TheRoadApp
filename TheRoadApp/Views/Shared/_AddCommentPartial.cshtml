@model TheRoadApp.Models.Comment.AddCommentInputModel
<section class="contact" id="Comment">
    <h1 class="contact-heading">Comment</h1>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <div>
        <form enctype="multipart/form-data"
              class="contact-form center"
              method="post"
              asp-controller="Comments"
              asp-action="Create">
            <div class="input-group">
                <label>Full Name *</label>
                <input asp-for="AuthorFullName"
                       type="text"
                       id="fullname"
                       class="contact-input"
                       placeholder="Enter Your Name" />
            </div>
            <div class="input-groups">
                <div class="input-group">
                    <label>Email *</label>
                    <input asp-for="Email"
                           type="email"
                           id="email"
                           class="contact-input"
                           placeholder="Enter Your Email" />
                </div>
                <div class="input-group">
                    <label>Title</label>
                    <input asp-for="Title"
                           type="text"
                           id="title"
                           class="contact-input"
                           placeholder="Enter Comment Title" />
                </div>
            </div>
            <div class="input-group">
                <label>Message</label>
                <textarea asp-for="Content"
                          class="form-textarea"
                          id="message"
                          placeholder="Your Message Here..."></textarea>
            </div>
            <button type="submit" class="form-btn">Submit</button>
        </form>
    </div>
</section>